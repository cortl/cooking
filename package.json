  "homepage": "https://github.com/cortl/recipes#readme",
  "devDependencies": {
    "@google-cloud/firestore": "^7.3.0",
    "jest": "^29.7.0",
    "joi": "^17.12.1",
    "nodemon": "^3.0.3",
    "prettier": "3.2.4",
    "prettier-plugin-sort-json": "3.1.0"
  }
